<project name="Steering" default="dist" basedir=".">
    <description>
        Build, test the Steering project
    </description>
  <!-- set global properties for this build -->
  <property name="src" location="src"/>
  <property name="test" location="test"/>
  <property name="build" location="bin"/>
  <property name="dist"  location="dist"/>
  <property name="junit" location="lib/junit.jar"/>
  <property name="screensaver.class" value="demo.ArrivalDemo" />
  <property name="debug.params" value="" />

  <target name="init">
    <!-- Create the time stamp -->
    <tstamp/>
    <!-- Create the build directory structure used by compile -->
    <mkdir dir="${build}"/>
  </target>

  <target name="compile" depends="init"
        description="compile the source " >
    <!-- Compile the java code from ${src} into ${build} -->
    <javac srcdir="${src}" destdir="${build}" classpath="lib/saverbeans-api.jar"/>
  </target>

  <target name="compile-tests" depends="compile"
        description="compile the source " >
    <!-- Compile the java code from ${src} into ${build} -->
    <javac srcdir="${test}" destdir="${build}" classpath="${junit}:${build}"/>
  </target>

  <target name="dist" depends="compile"
        description="generate the distribution" >
    <!-- Create the distribution directory -->
    <mkdir dir="${dist}/lib"/>

    <!-- Put everything in ${build} (except tests) into the Steering-${DSTAMP}.jar file -->
    <jar jarfile="${dist}/lib/Steering-${DSTAMP}.jar" 
         basedir="${build}"
	 excludes="**/*Test*"/>
  </target>

  <target name="test" depends="compile-tests"
        description="run test cases" >
    <junit printsummary="on" haltonfailure="yes">
      <classpath>
        <pathelement path="${build}"/>
	<pathelement location="${junit}"/>
      </classpath>

      <batchtest fork="yes" haltonfailure="yes">
        <fileset dir="${test}">
	  <include name="**/*Test*.java"/>
	</fileset>
      </batchtest>
    </junit>
  </target>

  <target name="debug" depends="compile">
    <java classname="org.jdesktop.jdic.screensaver.ScreensaverFrame" fork="true">
      <classpath>
        <pathelement location="${build}" />
	<pathelement location="lib/saverbeans-api.jar" />
      </classpath>
      <jvmarg value="-Xdebug" />
      <jvmarg value="-Xrunjdwp:transport=dt_socket,server=y,suspend=n" />
      <arg value="${screensaver.class}" />
      <arg line="${debug.params}" />
    </java>
  </target>

  <target name="clean"
        description="clean up" >
    <!-- Delete the ${build} and ${dist} directory trees -->
    <delete dir="${build}"/>
    <delete dir="${dist}"/>
  </target>
</project>